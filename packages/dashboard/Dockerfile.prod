# Production build for dashboard API server only
# Note: The web UI is served separately via gitfix-ui service

FROM node:18-alpine

WORKDIR /app

# Copy API package files
COPY package*.json ./
RUN npm ci --only=production

# Copy API source
COPY server.js ./
COPY auth.js ./
COPY llmMetricsAdapter.js ./

EXPOSE 4000

CMD ["node", "server.js"]